    class User{
    	public void main(String args[]){
     Scanner userInfo = new Scanner(System.in);
     
     	String userName = userInfo.nextLine();
        System.out.println("Enter your first and last name: " + userName);
        
        String emailAdd = userInfo.nextLine();
        System.out.println("Enter your email address: " + emailAdd);
        
        String shipAdd = userInfo.nextLine();
        System.out.println("Enter your address: " + shipAdd);
        
        System.out.println( "Your information is: " + userName + "," + emailAdd + "," + shipAdd);
    	}
     }
     
    class Cart{
    	public void main(String args[]){
    		
    	int shirtPrice = 20;
        int pantsPrice = 30;
        int shoesPrice = 40;
        
    	Scanner itemNum = new Scanner(System.in);
    	
        System.out.println("How many shirts do you want to purchase? ");
        int shirt = itemNum.nextInt();
        int shirtTotal = shirt * shirtPrice;
        
        System.out.println("How many pants do you want to purchase? ");
        int pants = itemNum.nextInt();
        int pantsTotal = pants * pantsPrice;
        
        System.out.println("How many shoes do you want to purchase? ");
        int shoes = itemNum.nextInt();
        int shoesTotal = shoes * shoesPrice;
       
        int amount = shirt + pants + shoes;
        int cart = shirtTotal + pantsTotal + shoesTotal;
        
        if(amount >= 10){
          System.out.println("Error: Maximum cart amount (10) was exceeded.");
        }
        else{
        System.out.println("Your Cart total is $" + cart);
        }
        
    	}
     }
     
