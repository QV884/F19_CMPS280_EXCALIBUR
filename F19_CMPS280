	package CMPS280;
	import java.util.Scanner;
  
  public class pa1{
    public static void main(String[] args){
    
    System.out.println("Welcome to Excalibur!");   
    }
  
    public class User{
    	public void main(String[] args){
    	Scanner userInfo = new Scanner(System.in);
     	
        System.out.println("Enter your first and last name: ");
        String userName = userInfo.nextLine();
        
        
        System.out.println("Enter your email address: ");
        String emailAdd = userInfo.nextLine();
        
        
        System.out.println("Enter your address: ");
        String shipAdd = userInfo.nextLine();
        
        System.out.println( "Your information is: " + userName + "," + emailAdd + "," + shipAdd);
        
        userInfo.close();
    	}
    }

    public abstract class Item{
    	public void main(String[] args){
    	
    	String[] shirt = {"Lavender Chiffon Top","Sweatshirt", "Grey Crop Top"};
    	
		String[] pants = {"Sweatpants","High-Waisted Jeans", "Shorts"};
		
		String[] shoes = {"Black Converse", "Brown Sandals", "Olive Green Wedges"};
		
    	Scanner itemNum = new Scanner(System.in);
    
    	System.out.println(shirt);
    	System.out.println("How many shirts do you want to purchase?");
        int numShirt = itemNum.nextInt();
        
        System.out.println(pants);
        System.out.println("How many pants do you want to purchase?");
        int numPants = itemNum.nextInt();
        
        System.out.println(shoes);
        System.out.println("How many pair of shoes do you want to purchase?");
        int numShoes = itemNum.nextInt();
        
        int cartMax = 9;
        
        int numTotal = numShirt + numPants + numShoes;
        
        for (cartMax = 9; numTotal <= cartMax; numTotal--) {
        	if (numShirt <= 3) {
        		int shirtTotal = numShirt*30; 
        	}
        	if (numPants <= 3) {
        		int pantsTotal = numPants*40; 
        	}
        	if (numShoes <= 3) {
        		int shoesTotal = numShoes*45;
        	}
        	else {
        		System.out.println("Error: Maximum cart amount (3) was exceeded.");
        	}
        	
        	}
        itemNum.close(); 
    	}
    }
    
    public class Exception {
    	public void main(String args[]) {
    		 try {
    			 int belt[] = new int[3];
    	         System.out.println("Access element four :" + belt[4]);
    	      } catch (ArrayIndexOutOfBoundsException e) {
    	         System.out.println("Exception thrown  :" + e);
    	      }
    	      System.out.println("Out of the block");
    	   }
    	}

  }
